@model dtu.blognet.Application.Web.Models.BlogViewModels.BlogIndexViewModel
@{
    ViewData["Title"] = "Blogs";
}

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="pull-right text-right" style="line-height: 14px">
                <small>dtu.blognet <br>Blog liste<br> <span class="c-white"></span></small>
            </div>
            <div class="header-icon">
                <i class="pe page-header-icon pe-7s-way"></i>
            </div>
            <div class="header-title">
                <h3 class="m-b-xs">Blog liste</h3>
                <small>
                    Oversigt over blogs
                </small>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-filled">
            <div class="panel-heading">
                <div class="panel-tools">
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                   <table>
                       <thead>
                           <tr>
                               <th>Titel</th>
                               <th>Beskrivelse</th>
                               @*<th>Ejer</th>*@
                           </tr>
                       </thead>
                       <tbody>
                           <tr>
                               @foreach (var blog in Model.Blogs)
                               {
                                   <td>@blog.Title</td>
                                   <td>@blog.Description</td>
                                   @*<td>@blog.Owner</td>*@
                               }
                           </tr>
                       </tbody>
                   </table>
                </div>
            </div>
        </div>
    </div>
</div>