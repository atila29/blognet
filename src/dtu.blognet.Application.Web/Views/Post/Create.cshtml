@model dtu.blognet.Application.Web.Models.PostViewModels.PostViewModel
@{
    ViewData["Title"] = "Create Post";
}
<label asp-for="Title"></label>
<br />
<form asp-action="Create">
    <input asp-for="Title"/>
    <textarea asp-for="Content" id="markdown-editor"></textarea>
    <input type="submit" class="btn btn-primary" value="Create Post"/>
    <input asp-for="BlogId" hidden="true"/>
</form>

@section Scripts
{
    <script>
        var simplemde = new SimpleMDE({ element: document.getElementById("markdown-editor") });
    </script>
}
